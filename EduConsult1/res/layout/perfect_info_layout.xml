<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_hui"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/perfect_info_title"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/home_hui" />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/perfect_info_type"
                android:textColor="@color/home_hui"
                />
            <Spinner 
                android:id="@+id/perfect_info_sp_gongsi_type"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <EditText 
            android:id="@+id/perfect_info_et_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/perfect_info_email"
            />
          <EditText 
            android:id="@+id/perfect_info_et_qq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/perfect_info_qq_number"
            />
          <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/perfect_info_at_address"
                android:textColor="@color/home_hui"
                />
            <Spinner 
                android:id="@+id/perfect_info_sp_address_one"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        
                  <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/perfect_info_at_address"
                android:textColor="@color/home_hui"
                android:visibility="invisible"
                />
            <Spinner 
                android:id="@+id/perfect_info_sp_address_two"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
                  <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                android:text="@string/perfect_info_at_address"
                android:textColor="@color/home_hui"
                />
            <Spinner 
                android:id="@+id/perfect_info_sp_address_three"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
           <EditText 
            android:id="@+id/perfect_info_et_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/perfect_info_address"
            />
          
          <Button 
              android:id="@+id/perfect_info_btn_commit"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/perfect_info_commit"
              android:textColor="@color/white"
              android:padding="10dp"
              android:textSize="18dp"
              android:layout_margin="10dp"
              android:background="@drawable/search_lv_isnull_btn_bg"
              />
          
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              android:padding="10dp"
              >
              <TextView 
                  android:id="@+id/perfect_info_tv_tiaoguo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/orn"
                  android:textSize="18dp"
                  android:text="@string/perfect_info_tiaoguo"
                  />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:text="@string/perfect_info_goto_home"
                  android:textColor="@color/home_hui"
                  />
          </LinearLayout>
    </LinearLayout>
    

</ScrollView>