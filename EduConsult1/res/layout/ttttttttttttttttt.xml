<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:orientation="horizontal" >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            
           android:background="@drawable/search_ore_et"
            android:padding="5dp"
            >
            <!-- 
             <Spinner
            android:id="@+id/search_home_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/search_tubiao"
            android:paddingRight="10dp"
            android:entries="@array/search_home_list" />
             -->
             <TextView 
             android:id="@+id/search_home_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_tubiao"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="产品"
            />
       
        <EditText 
            android:id="@+id/search_home_et_inpu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:background="#e6e6e6"
            android:gravity="center_vertical"
            android:hint="@string/search_inpu"
            />
        </LinearLayout>
            <Button 
            android:id="@+id/search_home_btn_seatch"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:text="@string/search_title"
            android:textColor="@color/white"
             android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
            android:padding="10dp"
            android:textSize="16dp"
            android:gravity="center"
            
            />
    </LinearLayout>
</LinearLayout>
