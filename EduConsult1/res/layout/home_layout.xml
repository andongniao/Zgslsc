                                      android:id="home_layout_iv_rem_right_b"
                                     android:layout_width="fill_parent"
                                     android:layout_weight="1"
                                     android:layout_height="0dp"
                                     />
                             </LinearLayout>
                         </LinearLayout>
                         <LinearLayout 
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             >
                             <LinearLayout 
                                 android:id="@+id/home_layout_ll_rem_b_1"
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content"
                                 android:gravity="center"
                                 android:orientation="vertical"
                                 >
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_title_1"
                                     android:textColor="@color/black"
                                     android:textSize="15dp"
                                      android:text="1231"
                                      />
                                   <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_detaile_1"
                                     android:textColor="@color/home_hui"
                                     android:textSize="14dp"
                                     android:text="1231"
                                      />
                                   <ImageView 
                                       android:id="@+id/home_layout_iv_rem_1"
                                       android:layout_width="75dp"
                                       android:layout_height="75dp"
                                       android:scaleType="fitXY"
                                       android:background="@color/black"
                                       />
                             </LinearLayout>
                             
                             
                              <LinearLayout 
                                 android:id="@+id/home_layout_ll_rem_b_2"
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content"
                                 android:gravity="center"
                                 android:orientation="vertical"
                                 >
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_title_2"
                                     android:textColor="@color/black"
                                     android:textSize="15dp"
                                      android:text="1231"
                                      />
                                   <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_detaile_2"
                                     android:textColor="@color/home_hui"
                                     android:textSize="14dp"
                                     android:text="1231"
                                      />
                                   <ImageView 
                                       android:id="@+id/home_layout_iv_rem_2"
                                       android:layout_width="75dp"
                                       android:layout_height="75dp"
                                       android:scaleType="fitXY"
                                       />
                             </LinearLayout>
                             
                               <LinearLayout 
                                 android:id="@+id/home_layout_ll_rem_b_3"
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content"
                                 android:gravity="center"
                                 android:orientation="vertical"
                                 >
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_title_3"
                                     android:textColor="@color/black"
                                     android:textSize="15dp"
                                      android:text="1231"
                                      />
                                   <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_detaile_3"
                                     android:textColor="@color/home_hui"
                                     android:textSize="14dp"
                                     android:text="1231"
                                      />
                                   <ImageView 
                                       android:id="@+id/home_layout_iv_rem_3"
                                       android:layout_width="75dp"
                                       android:layout_height="75dp"
                                       android:scaleType="fitXY"
                                       android:background="@color/black"
                                       />
                             </LinearLayout>
                             
                               
                                <LinearLayout 
                                 android:id="@+id/home_layout_ll_rem_b_4"
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content"
                                 android:gravity="center"
                                 android:orientation="vertical"
                                 >
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_title_4"
                                     android:textColor="@color/black"
                                     android:textSize="15dp"
                                      android:text="1231"
                                      />
                                   <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/home_layout_tv_rem_detaile_4"
                                     android:textColor="@color/home_hui"
                                     android:textSize="14dp"
                                     android:text="1231"
                                      />
                                   <ImageView 
                                       android:id="@+id/home_layout_iv_rem_4"
                                       android:layout_width="75dp"
                                       android:layout_height="75dp"
                                       android:scaleType="fitXY"
                                       />
                             </LinearLayout>
                             
                             
                             
                         </LinearLayout>
                         
                         
                         
                     </LinearLayout>
                     
                     
                     
                 </LinearLayout>
                 
                 <!--  -->
            
            </LinearLayout>

        </ScrollView>
    </com.xunbo.store.myviews.RefreshableView>
  

</LinearLayout>