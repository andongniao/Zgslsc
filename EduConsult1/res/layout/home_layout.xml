<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_top_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_layout_iv_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/home_top_left_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:text="中国饲料商城"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/home_layout_rl_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_search_bg"
                android:padding="10dp" />
        </RelativeLayout>
    </LinearLayout>
  <com.xunbo.store.myviews.RefreshableView
        android:id="@+id/home_layout_rview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_hui"
        android:orientation="vertical"
        android:scrollbars="none" >

        <ScrollView
            android:id="@+id/home_layout_sc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
				android:orientation="vertical"                
                >
                 <ImageView 
                     android:id="@+id/home_layout_iv_top"
                     android:layout_width="fill_parent"
                     android:layout_height="200dp"
                     android:background="@color/black"
                     />
                 <LinearLayout 
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     >
                     <LinearLayout 
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:gravity="center_vertical"
                         >
                     	<TextView 
                     	    android:layout_width="10dp"
                     	    android:layout_height="fill_parent"
                     	    android:background="#2EB398"
                     	    />   
                     	    <TextView 
                     	        android:layout_width="wrap_content"
                     	        android:layout_height="wrap_content"
                     	        android:text="@string/home_layout_rem"
                     	        android:textColor="@color/black"
                     	        android:textSize="16dp"
                     	        android:padding="5dp"
                     	        /> 
                     	        <TextView 
                     	            android:layout_width="0dp"
                     	            android:layout_weight="1"
                     	            android:layout_height="wrap_content"
                     	            />
                     	        <LinearLayout
                     	            android:id="@+id/home_layout_ll_more_rem" 
                     	            android:layout_width="wrap_content"
                     	            android:layout_height="wrap_content"
                     	            android:orientation="horizontal"
                     	            android:padding="5dp"
                     	            android:gravity="center_vertical"
                     	            android:layout_marginRight="5dp"
                     	            >
                     	            <TextView 
                     	                android:layout_width="wrap_content"
                     	                android:layout_height="wrap_content"
                     	                android:textColor="@color/home_hui"
                     	                android:text="@string/home_more"
                     	                android:layout_marginRight="5dp"
                     	                />
                     	            
                     	            <ImageView 
                     	                android:layout_width="wrap_content"
                     	                android:layout_height="wrap_content"
                     	                android:background="@drawable/home_more_bg"
                     	                />
                     	        </LinearLayout>
                     </LinearLayout>
                     <LinearLayout 
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         >
                         <LinearLayout 
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             >
                             <ImageView 
                                 android:id="@+id/home_layout_iv_rem_top_lf"
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_height="140dp"
                                 />
                             <LinearLayout 
                                 android:layout_width="0dp"
                                 android:layout_weight="1"
                                 android:layout_height="fill_parent"
                                 android:orientation="vertical"
                                 >
                                 <ImageView 
                                     android:id="home_layout_iv_rem_right__t"
                                     android:layout_width="fill_parent"
                                     android:layout_weight="1"
                                     android:layout_height="0dp"
                                     />
