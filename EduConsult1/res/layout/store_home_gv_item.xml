<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/store_home_item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/default_bg"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/store_home_item_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/store_home_item_tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="@string/test"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="5dp" >

            <TextView
                android:id="@+id/store_home_item_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:text="ï¿¥"
                android:textColor="@color/orn"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/store_home_item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="3dp"
                android:text="@string/test"
                android:textColor="@color/orn"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/store_home_item_tv_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="3dp"
                android:text="@string/test"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/store_home_item_tv_add2shopcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"
                android:background="@drawable/search_lv_notnull_btn_bg"
                android:padding="5dp"
                android:text="@string/gongqiu_add"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>